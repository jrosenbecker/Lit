<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Red:"
        android:id="@+id/textView" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/red_seekbar"
        android:layout_gravity="center_horizontal"
        android:progressTint="#ff0000"
        android:progress="50"
        android:thumbTint="#be0000"
        android:progressBackgroundTint="#ff6464" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Green:"
        android:id="@+id/textView2" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/green_seekbar"
        android:layout_gravity="center_horizontal"
        android:progressBackgroundTint="#64ff64"
        android:progressTint="#00ff00"
        android:thumbTint="#00be00"
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blue:"
        android:id="@+id/textView3" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blue_seekbar"
        android:layout_gravity="center_horizontal"
        android:progress="50"
        android:progressBackgroundTint="#6464ff"
        android:progressTint="#0000ff"
        android:thumbTint="#0000be" />
</LinearLayout>